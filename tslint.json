{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "warning",
  "rules": {
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-typecast",
      "check-type",
      "check-preblock",
      "check-type-operator",
      "check-separator",
      "check-decl"
    ],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false,
    "member-ordering": false,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "interface-name": false,
    "max-classes-per-file": [
      true,
      3
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "imports": "always",
          "exports": "always",
          "functions": "never",
          "typeLiterals": "always"
        },
        "esSpecCompliant": true,
        "singleline": "never"
      }
    ],
    "array-bracket-spacing": [
      true,
      "always"
    ],
    "brace-style": [
      true,
      "stroustrup"
    ],
    "ter-computed-property-spacing": [
      true,
      "never"
    ],
    "ter-func-call-spacing": [
      true,
      "never"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "object-curly-spacing": [
      true,
      "always"
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*"
    ]
  }
}